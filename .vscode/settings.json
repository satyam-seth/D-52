{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "editor.rulers": [
        100
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "isort.args":[
        "--profile",
        "black",
        "--skip-glob",
        "*/migrations/*",
    ],
}